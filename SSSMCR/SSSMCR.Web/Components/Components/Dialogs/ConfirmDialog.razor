<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="() => MudDialog.Close(DialogResult.Ok(true))" Color="@Color">@ButtonText</MudButton>
        <MudButton OnClick="() => MudDialog.Cancel()" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string ContentText { get; set; } = string.Empty;
    [Parameter] public string ButtonText { get; set; } = "Confirm";
    [Parameter] public Color Color { get; set; } = Color.Primary;
}